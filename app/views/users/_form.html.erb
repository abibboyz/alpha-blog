<% if @user.errors.any? %>
  <h2>We have some validation errors listed below.</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li>
    <%end%>
  </ul>
<%end%>

<%= form_with(model: @user, local: true) do |f|%>
  <p>
    <%= f.label :username%><br />
    <%=f.text_field :username%>
  </p>

  <p>
    <%= f.label :email%><br/>
    <%= f.email_field :email%>
  </p>
  <p>

    <p>
    <%= f.label :password%><br/>
    <%= f.password_field :password%>
  </p>
  <p>
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account")%>
  </p>
<% end %>