<h1 class = "text-center mt-4">Article listing page</h1>
<p>
    <%= link_to 'Create new article', new_article_path %>
</p>

<% @articles.each do |article| %>
    <div class="card mt-4">
    <h5 class="card-header">
        By <%= article.user.username if article.user%>
    </h5>
        <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to 'Show', article_path(article.id)%> | 
            <%= link_to 'Edit', edit_article_path(article)%> |
                    <!--IN RAILS 7 -> data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } in place of method: :delete-->
            <%=link_to 'Delete', article_path(article.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
        <div class = "card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at)%> ago,
            edited <%= time_ago_in_words(article.updated_at)%> ago </small>
        </div>
    </div>
<% end %>
